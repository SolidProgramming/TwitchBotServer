<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Solid Twitch Bot Server</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/index" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Dashboard
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/bots" Match="NavLinkMatch.All">
                <span class="oi oi-plus" aria-hidden="true"></span> Bots
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/settings" Match="NavLinkMatch.All">
                <span class="oi oi-ellipses" aria-hidden="true"></span> Settings
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
